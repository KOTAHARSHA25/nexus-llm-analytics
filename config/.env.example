# Nexus LLM Analytics Environment Configuration
# Copy this file to .env and fill in the values.

# ============================================================================
# Core Application Settings
# ============================================================================

# CORS settings for frontend-backend communication
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Logging configuration
LOG_LEVEL=INFO
LOG_FILE=logs/nexus.log

# ============================================================================
# AI Model Configuration  
# ============================================================================

# Automatic model selection based on available system resources
AUTO_MODEL_SELECTION=true

# Primary model for data analysis (adjust based on your system RAM)
# Options: ollama/llama3.1:8b (6GB+ RAM), ollama/phi3:mini (2GB+ RAM)
PRIMARY_MODEL=ollama/phi3:mini

# Review model for code validation
REVIEW_MODEL=ollama/phi3:mini

# Embedding model for document search
EMBEDDING_MODEL=ollama/nomic-embed-text

# Ollama server configuration
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_API_KEY=not-needed

# ============================================================================
# Database Configuration
# ============================================================================

# ChromaDB settings for vector storage
CHROMADB_PERSIST_DIRECTORY=./chroma_db
CHROMADB_COLLECTION_NAME=nexus_documents

# ============================================================================
# Data Processing Settings
# ============================================================================

# File upload settings
MAX_FILE_SIZE=100MB
ALLOWED_FILE_TYPES=csv,json,pdf,txt,xlsx

# Data directories
DATA_UPLOAD_DIR=data/uploads
DATA_SAMPLES_DIR=data/samples
DATA_EXPORTS_DIR=data/exports

# ============================================================================
# Security Settings
# ============================================================================

# Sandbox execution settings
ENABLE_CODE_SANDBOX=true
SANDBOX_TIMEOUT=30
MAX_MEMORY_MB=1024

# API security
API_KEY_REQUIRED=false
API_KEY=your-secret-api-key-here

# ============================================================================
# Performance Settings  
# ============================================================================

# Memory optimization
ENABLE_MEMORY_OPTIMIZATION=true
MAX_CONCURRENT_ANALYSES=3
CACHE_SIZE_MB=512

# ============================================================================
# Development Settings
# ============================================================================

# Development mode settings
DEBUG=false
RELOAD=true
HOST=127.0.0.1
PORT=8000

# Test database (for development/testing)
TEST_MODE=false
